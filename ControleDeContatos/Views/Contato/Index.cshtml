@model List<ContatoModel>;
@{
    ViewData["Title"] = "Listagem de contatos";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-4">
    <h1 class="display-6">Listagem de contatos</h1>
    <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Criar">Adicionar novo contato</a>
</div>


<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id=@contato.Id asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id=@contato.Id asp-controller="Contato" asp-action="Deletar">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
