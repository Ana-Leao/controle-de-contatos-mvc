@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<h1 class="display-6">Editar contato</h1>
<form asp-controller="Contato" asp-action="Editar" method="post">
    @* <input type="hidden" asp-for="Id"/> *@
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" id="nome" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Digite o email do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="celular" class="form-label">Celular</label>
        <input asp-for="Celular" type="text" class="form-control" id="celular" placeholder="Digite o celular do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">voltar</a>
</form>